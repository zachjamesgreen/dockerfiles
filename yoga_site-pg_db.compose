db:
  image: postgres:9.5
  environment:
    - POSTGRES_PASSWORD=dockergit
    - POSTGRES_USER=gogs
    - POSTGRES_DB=gogs
docker-gogs:
  image: zachjamesgreen/docker-gogs
  ports:
    - "3333:3333"
  autoredeploy: true
  restart: on-failure
  volumes:
    - '/opt/git/repos:/home/git/repos'
  links:
    - db
